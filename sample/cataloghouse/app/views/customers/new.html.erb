<h1>New customer</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@customer) do |f| %>
      
      <p><table>
        <tr><th>ID              </th><td><%= f.text_field :id          %></td></tr>
        <tr><th>性              </th><td><%= f.text_field :last_name   %></td></tr>
        <tr><th>名              </th><td><%= f.text_field :first_name  %></td></tr>
        <tr><th>性別            </th><td>
          <label><%= f.radio_button :gender, "1" %> 男</label>
          <label><%= f.radio_button :gender, "2" %> 女</label></td></tr>
        <tr><th>誕生日          </th><td><%= f.text_field :dob         %></td></tr>
      </table></p> 
      
      <%= render 'form' %>
    <% end %>
  </div>
</div>

<%= link_to 'Back', customers_path %>

<% if false %>
<% end %>

