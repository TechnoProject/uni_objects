<h1>Users#index</h1>

<table>
  <tr>
    <th>ID</th>
    <th>氏名</th>
    <th>誕生日</th>
    <th>性別</th>
    <th colspan=3>操作</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.id %></td>
    <td><%= user.last_name + " " + user.first_name %></td>
    <td><%= show_dob( user.dob ) %></td>
    <td><%= show_gender( user.gender ) %></td>
    <td><%= link_to '詳細', user_path(user.id) %></td>
    <td><%= link_to '編集', edit_user_path(user.id) %></td>
    <td><%= link_to '削除', user, method: :delete, data: { confirm: '本当に削除してよろしいですか。' } %></td>
  </tr>
<% end %>
</table>

<br />

